<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Label">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="AppTitleLabel" parent="Label">

        <item name="android:background">@color/gray_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>

    </style>

    <style name="AppContentLabel" parent="Label">

        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>
</resources>